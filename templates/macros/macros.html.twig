{% macro experiences(items, date_format = 'm/Y') %}
    <section>
        {% for item in items %}
            <article
                class="card border rounded my-5"
            >
                <header
                    class="card-header bg-dark text-white h2"
                >{{ item.name }}</header>
                <div
                    class="card-body"
                >
                    <h3
                        class="card-subtitle text-primary ml-3"
                    >{{ item.title }}</h2>
                </div>
                <ul
                    class="fa-ul"
                >
                    <li>
                        <span
                            class="fa-li"
                        >
                            <i
                                class="fas fa-map-marker-alt fa-2x"
                            ></i>
                        </span>
                        <span
                            class="ml-3"
                        >{{ item.location.street }}, {{ item.location.postalCode }} {{ item.location.city }}</span>
                    </li>
                    {% if item.techs is not empty %}
                        <li
                            class="mt-3"
                        >
                            <span
                                class="fa-li"
                            >
                                <i
                                    class="fas fa-cogs fa-2x"
                                ></i>
                            </span>
                            <i
                                class="ml-3"
                            >{{ item.techs|join(' ') }}</i>
                        </li>
                    {% endif %}
                </ul>
                <footer
                    class="card-footer bg-transparent border-top-0 p-0 text-right"
                >
                    <p
                        class="d-inline-block m-0 bg-dark rounded text-white p-2"
                    >
                        <i
                            class="fas fa-calendar-alt fa-2x"
                        ></i>
                        <span
                            class="text-primary"
                        >{{ item.dateStart|date(date_format) }}</span>
                        {% if item.dateEnd is not null %}
                            <i
                                class="fas fa-arrow-right fa-lg"
                            ></i>
                            <span
                                class="text-danger"
                            >{{ item.dateEnd|date(date_format) }}</span>
                        {% endif %}
                    </p>
                </footer>
            </article>
        {% endfor %}
    </section>
{% endmacro experiences %}

{% macro dates(dateStart, dateEnd, format = 'd/m/Y') %}
  {% if dateEnd is null %}
    <i>{{ dateStart|date(format) }}</i>
  {% else %}
    <i>{{ dateStart|date(format) }} - {{ dateEnd|date(format) }}</i>
  {% endif %}
{% endmacro dates %}

{% macro anchor(id) %}
    <div
        class="anchor-block mb-3"
    >
        <span
            class="anchor"
            id="{{ id }}"
        ></span>
    </div>
{% endmacro anchor %}
