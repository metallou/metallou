{% macro experiences(items, date_format = 'd/Y') %}
  <section
      class="card-body"
  >
      {% for item in items %}
      <article
          class="border rounded"
      >
          <h2
              class="d-inline-block h2 text-primary"
          >{{ item.name }}</h2>
          <h3
              class="d-inline-block h3 text-secondary ml-2"
          >{{ item.title }}</h2>
          <ul
              class="fa-ul"
          >
              <li>
                  <span
                      class="fa-li"
                  >
                      <i
                          class="fas fa-map-marker-alt fa-2x"
                      ></i>
                  </span>
                  <span
                      class="ml-3"
                  >{{ item.location.street }}, {{ item.location.postalCode }} {{ item.location.city }}</span>
              </li>
              {% if item.techs is not empty %}
              <li
                  class="mt-3"
              >
                  <span
                      class="fa-li"
                  >
                      <i
                          class="fas fa-cogs fa-2x"
                      ></i>
                  </span>
                  <i
                      class="ml-3"
                  >{{ item.techs|join(' ') }}</i>
              </li>
              {% endif %}
          </ul>
          <div
              class="text-right"
          >
              <p
                  class="d-inline-block m-0 bg-dark rounded text-white p-2"
              >
                  <i
                      class="fas fa-calendar-alt fa-2x"
                  ></i>
                  <span>{{ item.dateStart|date(date_format) }}</span>
                  {% if item.dateEnd is not null %}
                      <i
                          class="fas fa-arrow-right fa-lg"
                      ></i>
                      <span>{{ item.dateEnd|date(date_format) }}</span>
                  {% endif %}
              </p>
          </div>
      </article>
      {% endfor %}
  </section>
{% endmacro experiences %}

{% macro dates(dateStart, dateEnd, format = 'd/m/Y') %}
  {% if dateEnd is null %}
    <i>{{ dateStart|date(format) }}</i>
  {% else %}
    <i>{{ dateStart|date(format) }} - {{ dateEnd|date(format) }}</i>
  {% endif %}
{% endmacro dates %}

{% macro anchor(id) %}
    <div
        class="anchor-block mb-3"
    >
        <span
            class="anchor"
            id="{{ id }}"
        ></span>
    </div>
{% endmacro anchor %}
