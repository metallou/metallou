{% import 'macros/macros.html.twig' as macros %}

<aside
  class="mt-5"
>
    {{ macros.anchor('projects') }}

  <h2
    class="text-capitalize"
  >projets</h2>
  
  <section
    class="card-body container-fluid"
  >
    <div
      class="row"
    >
      {% for project in projects %}
        <article
          class="col-xl-3 col-lg-4 col-md-6 offset-md-0 col-sm-10 offset-sm-1 col-12 offset-0 d-flex"
        >
          <div
            class="card border border-secondary rounded mx-2 my-3 flex-fill
          >
            <div
              class="card-header bg-dark text-white h2"
            >{{ project.name }}</div>
            <img
              class="card-img-top"
              src="assets/images/projects/{{ project.image }}"
              alt="{{ project.name }}"
            />
            <div
              class="card-body"
            >
              <div
                class="card-title font-weight-bold"
              >{{ project.description }}</div>
              <div
                class="card-text"
              >
                <i
                  class="fas fa-cogs fa-2x"
                ></i>
                <i
                  class="ml-1"
                >{{ project.techs|join(' ') }}</i>
              </div>
            </div>
            <div
              class="card-footer bg-dark text-center text-nowrap"
            >
              <a
                href="{{ project.github }}"
                target="_blank"
                class="{{ project.github is null ? 'invisible' : '' }} mr-4"
              >
                <i
                  class="fab fa-github fa-3x text-white"
                ></i>
              </a>
              <a
                href="{{ project.url }}"
                target="_blank"
                class="ml-4"
              >
                <i
                  class="fas fa-globe fa-3x text-white"
                ></i>
              </a>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </section>
</aside>